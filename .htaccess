Options -Indexes
AddDefaultCharset UTF-8
AddHandler php5-cgi .php
RewriteEngine on

RewriteCond %{HTTP_REFERER} ^$
RewriteCond %{REQUEST_METHOD} ^POST$
RewriteRule ^addnew.php - [F]

#RewriteCond %{HTTP_REFERER} !^http://(www\.)?theappleman\.me\.uk [NC]
#RewriteCond %{REQUEST_FILENAME} !^(index\.html)? [NC]
#RewriteRule ^.?* /

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^show/([0-9]+)$ show.php?id=$1
RewriteRule ^([A-Za-z0-9]+)/p([0-9]+)$ chatbox.php?cat=$1&page=$2
RewriteRule ^([A-Za-z0-9]+)/p([0-9]+)/([0-9]+)$ chatbox.php?cat=$1&page=$2&id=$3
RewriteRule ^rating/([a-z]+)/([0-9]+)/(.+)$ rating.php?cat=$1&id=$2&key=$3
RewriteRule ^([A-Za-z0-9]+)/([0-9]+)$ chatbox.php?cat=$1&id=$2
RewriteRule ^rss/([A-Za-z0-9]+)/([0-9]+)$ rss.php?cat=$1&id=$2
RewriteRule ^rss/([A-Za-z0-9]+)$ rss.php?cat=$1
RewriteRule ^rss/$ rss.php
RewriteRule ^thumb/(.+)$ thumbs.php?cat=$1
RewriteRule ^([A-Za-z0-9]+)$ chatbox.php?cat=$1

<IfModule mod_php4.c>
  php_value upload_max_filesize 2M
  php_value post_max_size 5M
  php_flag zlib.output_compression on
</IfModule>
